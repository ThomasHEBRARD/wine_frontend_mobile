{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "jsx": "react",
        "baseUrl": "./src",
        "paths": {
            "public/*": ["./public/*"]
        },
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2020",
        "lib": ["es2020", "dom"],
        "sourceMap": true,
        "allowUnreachableCode": false,
        "noImplicitReturns": true,
        "strict": true,
        "importHelpers": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*"]
}
